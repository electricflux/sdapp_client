<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.parking.dashboard"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <!-- OpenID Authentication Permissions -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"></uses-permission>
	<uses-permission android:name="android.permission.USE_CREDENTIALS"></uses-permission>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    
    <application android:icon="@drawable/icon" android:label="@string/app_name" 
        android:name="com.parking.application.ParkingApplication">
        <activity android:name="com.parking.dashboard.activity.DashboardActivity"
                  android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.parking.paymenthistory.PaymentHistory"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name="com.parking.findparking.FindParkingMap"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name="com.parking.findparking.ParkingSpotAndPaymentInformation"                  
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name="com.parking.findparking.FindParkingList"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name="com.parking.findparking.FindParkingTabs" 
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
         
        <activity android:name="com.parking.locatemycar.LocateMyCar"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>

        <activity android:name="com.parking.payforspot.PayForSpot"
                  android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        
        <activity android:name="com.parking.auth.GetAccountListActivity"></activity>
        <activity android:name="com.parking.auth.GetAuthTokenActivity"></activity>
        <activity android:name="com.parking.auth.RegisterUserActivity"></activity>

      <uses-library android:name="com.google.android.maps" />
    </application>
</manifest>